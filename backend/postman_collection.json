{
  "info": {
    "name": "Smart Rural Issue Management API",
    "description": "Complete API collection for testing the Smart Rural Issue Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
